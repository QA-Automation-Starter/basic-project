// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
  "name": "docker",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/java:11",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "11"
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.m2,target=/home/vscode/.m2,type=bind,consistency=cached" // Establishing a persistent volume for maven local repository downloads
  ],
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "java -version",
  // Configure tool-specific properties.
  "customizations": {
    "jetbrains": {
      "backend": "IntelliJ"
    },
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    },
    "vscode": {
      "extensions": [
        "alphabotsec.vscode-eclipse-keybindings",
        "ms-vscode-remote.vscode-remote-extensionpack"
      ],
      "settings": {
        "java.compile.nullAnalysis.mode": "automatic",
        "maven.view": "flat",
        "java.dependency.packagePresentation": "hierarchical",
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.sources.organizeImports.starThreshold": 1,
        "java.sources.organizeImports.staticStarThreshold": 1
        // DELETEME
//        "java.configuration.runtimes": [
//          {
//            "name": "JavaSE-11",
//            "path": "/usr/lib/jvm/msopenjdk-current"
//          }
//        ],
//        "maven.terminal.customEnv": [
//          {
//            "environmentVariable": "JAVA_HOME",
//            "value": "/usr/lib/jvm/msopenjdk-current"
//          }
//        ]
      }
    }
  }
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}