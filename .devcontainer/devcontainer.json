{
  "name": "basic-project",
  "image": "openjdk:11",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "11",
      "installMaven": "true"
    }
  },
  "customizations": {
    // see https://www.jetbrains.com/help/idea/2024.2/prerequisites-for-dev-containers.html#local_container
    "jetbrains": {
      "backend": "IntelliJ"
    },
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    },
    "vscode": {
      "extensions": [
        "alphabotsec.vscode-eclipse-keybindings",
        "ms-vscode-remote.vscode-remote-extensionpack"
      ],
      "settings": {
        "maven.pomfile.prefetchEffectivePom": true
      }
    }
  }
}
